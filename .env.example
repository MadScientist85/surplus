# ============================================================================
# HBU ASSET RECOVERY - Environment Configuration Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# ============================================================================

# ============================================================================
# CORE APPLICATION
# ============================================================================

# Node Environment (development, production, test)
NODE_ENV=development

# Application URL (used for callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Vercel URL (automatically set by Vercel)
VERCEL_URL=

# ============================================================================
# AUTHENTICATION - Clerk
# ============================================================================
# Required for user authentication and access control
# Get these from: https://dashboard.clerk.com

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================
# Required for data persistence
# Format: postgresql://username:password@host:port/database?sslmode=require

# Primary Database URL (Neon or standard PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/hbu_recovery

# Neon Database URL (if using Neon)
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/hbu_recovery?sslmode=require

# ============================================================================
# SUPABASE (Optional - if using Supabase features)
# ============================================================================
# Get these from: https://app.supabase.com

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# SKIP TRACING APIs
# ============================================================================
# These are optional - only needed if using specific skip tracing services

# Skip Genie - Unlimited bulk CSV upload
SKIP_GENIE_API_KEY=
SKIP_GENIE_WORKFLOW=default

# REsimpli - Real estate data
RESIMPLI_API_KEY=

# Mojo - Dialer and contact data
MOJO_API_KEY=

# SkipForce - Skip tracing service
SKIPFORCE_API_KEY=

# Tracerfy - Skip tracing service
TRACERFY_API_KEY=

# Endato - People search API
ENDATO_API_KEY=

# Accurate Append - Data enrichment
ACCURATE_APPEND_API_KEY=

# Trestle - Property data
TRESTLE_API_KEY=

# ZeroBounce - Email verification
ZEROBOUNCE_API_KEY=

# Skip Cascade Configuration
SKIP_CASCADE_TIMEOUT=30000

# ============================================================================
# COMMUNICATION SERVICES
# ============================================================================

# Twilio - SMS and Voice (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid - Email service (Optional)
SENDGRID_API_KEY=

# ============================================================================
# AI SERVICES
# ============================================================================

# OpenAI - GPT models (Optional)
OPENAI_API_KEY=

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=

# Grok AI (Optional)
GROK_API_KEY=

# ============================================================================
# BLOCKCHAIN & NFT
# ============================================================================
# For bounty payments and transparency features

# Polygon Blockchain
BLOCKCHAIN_PRIVATE_KEY=
BOUNTY_CONTRACT_ADDRESS=
NFT_CONTRACT_ADDRESS=

# Pinata - IPFS pinning service
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ============================================================================
# TCPA COMPLIANCE & OUTREACH SETTINGS
# ============================================================================

# Quiet Hours (24-hour format, e.g., 09:00, 21:00)
QUIET_HOURS_START=21:00
QUIET_HOURS_END=09:00

# Maximum daily SMS per contact
MAX_DAILY_SMS=3

# DNC (Do Not Call) scrubbing interval in hours
DNC_SCRUB_INTERVAL=24

# Opt-out link expiry in days
OPT_OUT_EXPIRY_DAYS=365

# ============================================================================
# BUSINESS RULES & CONFIGURATION
# ============================================================================

# Predictor confidence threshold (0-1)
PREDICTOR_CONFIDENCE=0.75

# Ethics score threshold (0-100)
ETHICS_THRESHOLD=70

# Revenue take percentage (e.g., 0.30 for 30%)
REVENUE_TAKE_PERCENT=0.30

# Bulk processing settings
BULK_BATCH_SIZE=100
BULK_MIN_THRESHOLD=10

# ============================================================================
# PROJECT MANAGEMENT
# ============================================================================

# Trello Integration (Optional)
TRELLO_API_KEY=
TRELLO_TOKEN=
TRELLO_BOARD_ID=

# ============================================================================
# SECURITY & MONITORING
# ============================================================================

# Cron job authentication
CRON_SECRET=your_random_secret_here

# Audit log retention in days
AUDIT_LOG_RETENTION=90

# ============================================================================
# PROXIES & SCRAPING (Optional)
# ============================================================================

# Comma-separated list of proxy URLs
PROXIES=

# ============================================================================
# PAYMENT PROCESSING (Optional)
# ============================================================================

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Enable debug logging
DEBUG=false

# Disable email sending in development
DISABLE_EMAILS=false

# Test mode for payment processing
TEST_MODE=true

# ============================================================================
# NOTES
# ============================================================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - All other variables are server-side only
# - Required variables for basic operation:
#   - NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY
#   - CLERK_SECRET_KEY
#   - DATABASE_URL
# - Optional variables enable additional features
# - Never commit .env.local to version control
# - Use environment variables in Vercel dashboard for production
# ============================================================================
